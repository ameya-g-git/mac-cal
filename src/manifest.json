{
  "description": "Generate an .ics (calendar) file using the details on your MyTimetable page!",
  "name": "MacCal",
  "version": "0.1",
  "manifest_version": 3,

  "background": { "scripts": ["background/background.js"] },

  "icons": {
    "16": "icons/maccal_icon16.png",
    "32": "icons/maccal_icon32.png",
    "64": "icons/maccal_icon64.png",
    "128": "icons/maccal_icon128.png"
  },

  "action": {
    "default_icon": {
      "16": "icons/maccal_icon16.png",
      "32": "icons/maccal_icon32.png",
      "64": "icons/maccal_icon64.png",
      "128": "icons/maccal_icon128.png"
    },
    "default_title": "MacCal",
    "default_popup": "static/index.html"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "maccal@extension.com",
      "strict_min_version": "42.0"
    }
  },

  "content_security_policy": {
    "extension_pages": "default-src 'self'"
  },

  "permissions": ["activeTab", "downloads", "scripting"]
}
